{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": [],
    "github-actions": {
        "fileMatch": [
            "^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$",
            "(^|/)action\\.ya?ml$"
        ],
        "addLabels": [
            "github_actions"
        ],
        "commitMessageTopic": "Action {{ depName }}",
        "pinDigests": true,
        "rangeStrategy": "pin"
    }
}
